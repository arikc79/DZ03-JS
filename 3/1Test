<!DOCTYPE html>
<html lang="ru">
<head>
  <meta charset="UTF-8">
  <title>Простейший тест</title>
</head>
<body>
<script>
    // Масив запитань
    const questions = [
        "Вам нравится работать за компьютером? (Так/Ні)",
        "Вы любите фантастику? (Так/Ні)",
        "Хотели бы вы служить в армии? (Так/Ні)"
    ];

    // Баллы за "Так"
    const scoresYes = [2, 3, 5];  

    // Баллы за "ні"
    const scoresNo = [1, 1, 1];  

    let total = 0;

    for (let i = 0; i < questions.length; i++) {
        let answer = prompt(questions[i]);

        if (answer !== null) {
            answer = answer.trim().toLowerCase();
        }

        if (answer === "так") {
            total += scoresYes[i];
        } else if (answer === "ні") {
            total += scoresNo[i];
        }
    }

    alert("Ваш результат: " + total + " баллов");
</script>
</body>
</html>
